rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             firestore.get(/databases/(default)/documents/admins/$(request.auth.uid)).data != null;
    }
    
    // Product images - public read access, admin-only write/delete
    match /products/{imageId} {
      allow read: if true; // Public read access
      allow write, delete: if isAdmin(); // Only admins can upload/delete
    }
    
    // All other paths - admin-only access
    match /{allPaths=**} {
      allow read, write, delete: if isAdmin();
    }
  }
}
